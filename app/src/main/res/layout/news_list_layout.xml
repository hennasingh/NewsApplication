<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@color/cardview_bg"
        >

    <LinearLayout
        android:id="@+id/LvNewsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newsDatetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="@string/placeholder_text_date"
            android:textColor="@color/dateColor"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/newsSectiontv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="@string/placeholder_text_section"
            android:gravity="end"
            android:textColor="@android:color/white"/>

    </LinearLayout>

        <TextView
            android:id="@+id/newsAuthortv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LvNewsItem"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/black"
            tools:text="@string/placeholder_text_author"/>

        <TextView
            android:id="@+id/newsTitletv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsAuthortv"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/titleColor"
            tools:text="@string/placeholder_text_title"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>